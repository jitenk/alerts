<script>
    $(function () {
        $('#myTab a').click(function (e) {
            e.preventDefault()
            $(this).tab('show')
        })
    })
</script>

<div class="container">

    <%= form_for(@alert) do |f| %>
      <% if @alert.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@alert.errors.count, "error") %> prohibited this alert from being saved:</h2>

          <ul>
          <% @alert.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name,  class:'form-control input-normal'%>
      </div>
      <div class="actions">
        <%= f.submit class:'btn btn-default'%>
      </div>

      <ul class="nav nav-tabs" id="myTab">
        <li class="active"><a href="#Victim">Victim(s)</a></li>
        <li><a href="#AgencyInformation">Agency Information</a></li>
        <li><a href="#Date_time_location">Date/Time/Location</a></li>
        <li><a href="#Suspect">Suspect(s)</a></li>
        <li><a href="#Vehicle">Vehicle(s)</a></li>
        <li><a href="#Additional_info">Additional Information</a></li>
        <li><a href="#Distribution">Distribution</a></li>
      </ul>

      <div id='content' class="tab-content">
        <div class="tab-pane fade in active" id="Victim">
          <!--Victim Tab here-->
        </div>
        <div class="tab-pane fade" id="AgencyInformation">
            <!--Agency Information here-->
        </div>
        <div class="tab-pane fade" id="Date_time_location">
          <!--Date/Time/location here-->
        </div>
        <div class="tab-pane fade" id="Suspect">
         <!--Suspect here-->
        </div>
        <div class="tab-pane fade" id="Vehicle">
          <!--vehicle info here-->
        </div>
        <div class="tab-pane fade" id="Additional_info">
          <!--additional information here-->
        </div>
        <div class="tab-pane fade" id="Distribution">
          <!--distribution here-->
        </div>
      </div>


<% end %>

</div>

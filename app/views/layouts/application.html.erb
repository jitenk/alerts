<!DOCTYPE html>
<html>
<head>
  <title>Texas Alerts</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Wrap all page content here -->
<div id="wrap">

  <!-- Fixed navbar -->
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Texas Alerts', alerts_path, class: 'navbar-brand'  %>
      </div>
      <div class="navbar-collapse collapse navbar-responsive-collapse">

        <ul class="nav navbar-nav navbar-right">

          <%if current_user.admin? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%=link_to 'Alert Types', console_alert_types_path%></li>
                  <li><%=link_to 'Alert Type Questions', console_questions_path%></li>
                  <li><%=link_to 'User', console_users_path%></li>
                  <!--<li><a href="#">stuff</a></li>-->
                  <!--<li class="divider"></li>-->
                  <!--<li><a href="#">soon</a></li>-->
                </ul>
              </li>
          <% end %>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.full_name%> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Profile', edit_user_registration_path %></li>
              <li class="divider"></li>
              <li><%= link_to 'Log out', destroy_user_session_path, method: :delete%></li>
            </ul>
          </li>

        </ul>
      </div><!--/.nav-collapse -->

    </div>
  </div>



  <!-- Begin page content this is margin for overlapping of header and footer.  -->
  <div class="container" style="margin-bottom: 50px; margin-top: 60px">

    <% if (flash[:error] || flash[:notice] || flash[:alert])%>
        <div class="alert alert-info"><%= flash[:error] || flash[:notice] || flash[:alert] %> </div>
    <% end %>

<%= yield %>

  </div><br><br>

  <div id="footer" class="navbar-fixed-bottom">
      <p class="version_number"> Texas Alerts Version: <%= ALERT_VERSION["version"]%></p>
  </div>


</body>
</html>

<div class="container">

  <h3>User</h3><br>

  <div class="container">

    <%= paginate @users %>

    <% if @users.count > 0 %>
        <table class="table table-hover table-bordered table-responsive">
          <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>ORI</th>
            <th>Admin</th>
            <th>Approved</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @users.each do |user| %>
              <tr>
                <%if current_user.email == user.email%>
                    <td><%=user.full_name %></td>
                <%else%>
                    <td><%=link_to user.full_name, edit_console_user_path(user) %></td>
                <%end%>

                <td><%= user.email %></td>
                <td><%= user.agency_ori %></td>
                <td><%= user.admin ? 'Yes' : 'No' %></td>
                <td><%= user.approved ? 'Yes' : 'No' %></td>
                <!--<td><%#= link_to 'Show', console_user_path(user) %></td>-->
                <!--<td><%#= link_to 'Edit', edit_console_user_path(user) %></td>-->

                <%if current_user.email == user.email%>
                    <td> </td>
                <%else%>
                    <td><%= link_to 'Delete', console_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <%end%>


              </tr>
          <% end %>
          </tbody>
        </table>
        <%= paginate @users %>
    <% else %>
        <div class="alert alert-danger">No User Found</div>
    <% end %>
    <br>
  </div>
  <%#= link_to 'New Alert type', new_console_alert_type_path %>
</div>
